@model IEnumerable<TreSorelle.Models.Produto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1  class="display-4">Lista de Produtos</h1>
<p class="py-3">
    <a class="btn btn-danger" asp-action="Create" style="background-color:  #db75a8;"> <i class="bi bi-plus-circle-fill"></i> Adicionar</a>
</p>

<table id="myTable" class="table w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Editar Gênero" style="color: #db75a8;"><i class="bi bi-pencil-fill"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" style="color:  #db75a8;" data-bs-title="Exibir Detalhes" ><i class="bi bi-search"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Excluir Gênero" style="color:  #db75a8;"><i class="bi bi-trash-fill"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
