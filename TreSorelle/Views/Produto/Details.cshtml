@model TreSorelle.Models.Produto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Produto</h1>
<h4 class="display-6">Detalhes</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Foto" class="form-label"></label>
            <img  src="@Model.Foto" class="img-fluid w-100">
        </div>
    </div>
    <div class="col-md-8 col-sm-12 col-xxl-9">
        <div class="col-12 mb-2">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
        <div class="col-12 mb-2">
            <label asp-for="DescricaoResumida" class="form-label"></label>
            <input asp-for="DescricaoResumida" class="form-control" disabled />
        </div>
        <div class="row mb-2">
            <div class="col-md-6">
                <label asp-for="Preco" class="form-label"></label>
                <input asp-for="Preco" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" disabled />
            </div>
        </div>
    </div>
    <div class="col-12 mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger me-3" style="background-color: #db75a8"><i class="bi bi-pencil-fill" style="background-color: #db75a8"></i>
            Editar</a>
        <a asp-action="Index" class="btn btn-danger" style="background-color: #db75a8"><i class="bi bi-arrow-left-circle-fill" style="background-color: #db75a8"></i> Voltar a Listagem</a>
    </div>
</div>