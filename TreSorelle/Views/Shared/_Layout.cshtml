<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Remy">

    <title>Tre Sorelle - @ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="48x48" href="~/assets/img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" type="text/css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" type="text/css">
    <!-- Iocn -->
    <link rel="stylesheet" href="~/assets/fonts/iconmoon.css" type="text/css">
    <!-- Main Styles -->
    <link rel="stylesheet" href="~/assets/css/main.css" type="text/css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/assets/extras/animate.css" type="text/css">
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/assets/extras/owl.carousel.css" type="text/css">
    <link rel="stylesheet" href="~/assets/extras/owl.theme.css" type="text/css">
    <link rel="stylesheet" href="~/assets/extras/pikaday.css" type="text/css">
    <!-- Responsive CSS Styles -->
    <link rel="stylesheet" href="~/assets/css/responsive.css" type="text/css">
    <!-- Slicknav js -->
    <link rel="stylesheet" href="~/assets/css/slicknav.css" type="text/css">



</head>

<body>
    <!-- Header Section Start -->
    <header id="header-wrap">
        <!-- Header Logo and Menu Start -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation" data-spy="affix" data-offset-top="50">
            <div class="container">
                <div class="navbar-header">
                    <!-- start Toggle Nav For Mobiles -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="navbar-brand"><img src="~/assets/img/logo.png" alt=""></a>
                </div>

                <!--  Start Navigation-->
                <div class="navbar-collapse collapse" id="navigation">
                    <!-- Top Search Start -->
                    <ul class="right cart-search">
                        <li class="has-form">
                            <div id="top-search">
                                <div class="header-search-wrap">
                                    <div class="dropdown header-search">
                                        <a href="#" id="search-button" class="dropdown-toggle" data-toggle="dropdown"
                                            role="button">
                                            <i class="icon-search"></i>
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="Search-button">
                                            <form action="" class="td-search-form" method="get" role="search">
                                                <div class="head-form-search">
                                                    <input id="td-header-search" class="form-control" type="text"
                                                        autocomplete="off" name="s" value="" placeholder="Search">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <!-- Top Search End -->

                    <!-- Start Navigation List -->
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class='@(ViewBag.Title == "Home" ? "active" : "")' asp-action="Index" asp-controller="Home">Home</a>
                            
                        </li>
                        <li><a class='@(ViewBag.Title == "Cardápio" ? "active" : "")' asp-action="Cardapio" asp-controller="Home">Cardápio</a></li>
                        <li><a class='@(ViewBag.Title == "Quem Somos" ? "active" : "")' asp-action="QuemSomos" asp-controller="Home">Quem Somos</a></li>
                    </ul>
                </div>

                <!-- Mobile Menu Start -->
              
                <!-- Mobile Menu End -->
            </div>
        </div>
        <!-- Header Logo and Menu End -->

        <!-- Main slider Section -->
        <div id="carousel-area">
            <div class="touch-slider owl-carousel">
                <div class="item">
                    <img class="slider-img" src="~/assets/img/slider/image-1.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slider-img" src="~/assets/img/slider/image-2.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slider-img" src="~/assets/img/slider/image-3.jpg" alt="">
                    
                </div>
            </div>
        </div>
        <!-- Main slider Section End -->

    </header>
    <!-- Header Section End -->
    @RenderBody()
    <!-- Footer Section Start -->
    <footer>
        <!-- Footer area Start -->
        <div class="footer-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="widget-title"><i class="fa fa-comments"></i> Onde estamos? </h3>
                            <ul class="menu-useful-links">
                                <li><i class="fa fa-home"></i> Tre Sorelle Gelateria </li>
                                <li>Av. Pedro Ometto - 2199</li>
                                <li>Barra Bonita, SP</li>
                                <li><i class="fa fa-envelope-o"></i> tresorelle@gmail.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="widget-title"><i class="fa fa-clock-o"></i> Horário de Funcionamento</h3>
                            <ul class="menu-useful-links">
                                <li><i class="fa fa-cutlery"></i> Ter e Qua 13h às 21h</a></li>
                                <li><i class="fa fa-cutlery"></i> Qui a Dom 13h às 22h</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="widget-title"><i class="fa fa-thumbs-o-up"></i> Acompanhe nossas Redes Sociais</h3>
                            <div class="social-icon"> <li><i class="fa fa-cutlery"></i> Ter e Qua 13h às 21h</a></li>
                            <a href="https://www.instagram.com/tresorelleofc/"><i class="fa fa-instagram"></a></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer area End -->

    </footer>
    <!-- Footer Section End -->

    <!-- Go To Top Link -->
    <a href="#" class="back-to-top">
        <i class="fa fa-angle-up"></i>
    </a>

    <!-- Main JS  -->
    <script type="text/javascript" src="~/assets/js/jquery-min.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.parallax.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.slicknav.js"></script>
    <script type="text/javascript" src="~/assets/js/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/assets/js/main.js"></script>
    <script type="text/javascript" src="~/assets/js/smooth-scroll.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.counterup.min.js"></script>
    <script type="text/javascript" src="~/assets/js/waypoints.min.js"></script>
    <script type="text/javascript" src="~/assets/js/form-validator.min.js"></script>
    <script type="text/javascript" src="~/assets/js/contact-form-script.js"></script>
    <script type="text/javascript" src="~/assets/js/pikaday.js"></script>
    <script>

        var picker = new Pikaday(
            {
                field: document.getElementById('datepicker'),
                firstDay: 1,
                minDate: new Date(2000, 0, 1),
                maxDate: new Date(2020, 12, 31),
                yearRange: [2000, 2020]
            });

    </script>

    </script>
</body>

</html>