@model TreSorelle.Models.Tipo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="display-4">Produto</h1>
<h4 class="display-6">Alterar</h4>
<hr />

<form asp-action="Edit" class="row" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="col-md-9 col-sm-12">
        <div class="form-group mb-3">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
            <div class="form-group mt-4">
            <button type="submit" class="btn btn-danger me-3" style="background-color: #db75a8"><i class="bi bi-save2-fill"></i> Salvar</button>
            <a asp-action="Index" class="btn btn-danger" style="background-color: #db75a8"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
        </div>
        </form>
</div>


@section Scripts {}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
